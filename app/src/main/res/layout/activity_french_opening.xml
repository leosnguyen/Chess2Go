<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrenchOpeningActivity"
    android:background="@color/darkGray"
    android:padding="40dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtOpenings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The French Opening"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgFrenchOpening1"
                android:layout_width="365dp"
                android:layout_height="365dp"
                android:src="@drawable/french_opening_1"
                android:layout_marginTop="50dp"
                android:layout_below="@id/txtOpenings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgFrenchOpening2"
                android:layout_width="365dp"
                android:layout_height="365dp"
                android:src="@drawable/french_opening_2"
                android:layout_marginTop="20dp"
                android:layout_below="@id/imgFrenchOpening1"
                app:layout_constraintEnd_toEndOf="@+id/imgFrenchOpening1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imgFrenchOpening1"
                app:layout_constraintTop_toBottomOf="@+id/imgFrenchOpening1" />

            <ImageView
                android:id="@+id/imgFrenchOpening3"
                android:layout_width="365dp"
                android:layout_height="365dp"
                android:src="@drawable/french_opening_3"
                android:layout_marginTop="20dp"
                android:layout_below="@id/imgFrenchOpening2"
                app:layout_constraintEnd_toEndOf="@+id/imgFrenchOpening2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imgFrenchOpening2"
                app:layout_constraintTop_toBottomOf="@+id/imgFrenchOpening2" />

            <ImageView
                android:id="@+id/imgFrenchOpening4"
                android:layout_width="365dp"
                android:layout_height="365dp"
                android:src="@drawable/french_opening_4"
                android:layout_marginTop="20dp"
                android:layout_below="@id/imgFrenchOpening3"
                app:layout_constraintEnd_toEndOf="@+id/imgFrenchOpening3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imgFrenchOpening3"
                app:layout_constraintTop_toBottomOf="@+id/imgFrenchOpening3" />

            <ImageView
                android:id="@+id/imgBackButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgTouchTarget"
                app:layout_constraintEnd_toEndOf="@+id/imgTouchTarget"
                app:layout_constraintStart_toStartOf="@+id/imgTouchTarget"
                app:layout_constraintTop_toTopOf="@+id/imgTouchTarget" />

            <ImageView
                android:id="@+id/imgTouchTarget"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0"
                android:onClick="backToMenu"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>