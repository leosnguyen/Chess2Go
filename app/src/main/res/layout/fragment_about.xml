<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <ImageView
        android:id="@+id/imgRoundedSquareFragAbout"
        android:layout_width="335dp"
        android:layout_height="250dp"
        android:alpha="0.1"
        android:background="@drawable/rounded_square_bg"
        android:padding="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iconAbout"
        style="@style/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_about"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/imgRoundedSquareFragAbout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconAbout"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="@string/text_fragment_about"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgRoundedSquareFragAbout"
        app:layout_constraintEnd_toEndOf="@+id/imgRoundedSquareFragAbout"
        app:layout_constraintStart_toStartOf="@+id/imgRoundedSquareFragAbout"
        app:layout_constraintTop_toTopOf="@+id/imgRoundedSquareFragAbout" />

</androidx.constraintlayout.widget.ConstraintLayout>
